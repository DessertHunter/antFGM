<layouts>
    <!-- A centered layout for vívoactive HR with 148x205px. -->
	<layout id="main_layout">
	    <label id="label" x="center" y="4" text="@Strings.label" color="Gfx.COLOR_DK_GRAY" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_XTINY" />
	    <label id="value" x="98" y="20" text="@Strings.invalid_value" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_NUMBER_THAI_HOT" />
	    <label id="climbsink_rate" x="103" y="61" text="@Strings.invalid_value" color="Gfx.COLOR_PINK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_MEDIUM" />
	    <label id="measurement_age" x="center" y="85" text="@Strings.outdated_value" color="Gfx.COLOR_LT_GRAY" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_TINY" />
        <drawable id="trend" class="TrendDrawable">
        	<param name="color">Gfx.COLOR_DK_GRAY</param>
        	<param name="x">74</param>
        	<param name="y">140</param>
        	<param name="radius">26</param>
    	</drawable>
	    <label id="status" x="8" y="180" text="@Strings.status_default" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_TINY" />
	    <label id="nfc_state" x="140" y="180" text="@Strings.nfc_state_unknown" color="Gfx.COLOR_YELLOW" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_TINY" />
	</layout>
	<layout id="info_layout">
	    <!-- TODO: <drawable class="Background" />-->
	    <label id="caption1" x="center" y="5" text="@Strings.info1" color="Gfx.COLOR_DK_GRAY" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_TINY" />
	    <label id="line1" x="center" y="25" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_SMALL" />
	    <label id="caption2" x="center" y="55" text="@Strings.info2" color="Gfx.COLOR_DK_GRAY" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_TINY" />
	    <label id="line2" x="center" y="75" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_SMALL" />
	    <label id="caption3" x="center" y="105" text="@Strings.info3" color="Gfx.COLOR_DK_GRAY" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_TINY" />
	    <label id="line3" x="center" y="125" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_SMALL" />
	    <label id="caption4" x="center" y="155" text="@Strings.info4" color="Gfx.COLOR_DK_GRAY" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_TINY" />
	    <label id="line4" x="center" y="175" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_SMALL" />
	</layout>
</layouts>
